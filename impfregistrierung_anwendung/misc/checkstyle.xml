<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
"-//Puppy Crawl//DTD Check Configuration 1.3//EN"
"https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <!-- Zeichenkodierung -->
  <property name="charset" value="UTF-8"/>

  <!-- Maximale Zeilenlänge 120 Zeichen -->
  <module name="LineLength">
    <property name="max" value="120"/>
  </module>

  <!-- TreeWalker -->
  <module name="TreeWalker">
    <!-- Klassennamen sollten groß geschrieben werden (UpperCamelCase) -->
    <module name="TypeName"/>

    <!-- Methodennamen sollten klein geschrieben werden (lowerCamelCase) -->
    <module name="MethodName"/>


    <!-- Parameter soll klein geschrieben werden -->
    <module name="ParameterName"/>

    <!-- Feldname soll klein geschrieben -->

    <module name="MemberName"/>


    <!-- Maximale Länge einer Methode -->

    <module name="MethodLength">

      <property name="max" value="150"/>

    </module>
    <!-- Sternchen * entfernen -->

    <module name="AvoidStarImport"/>
</module>
</module>
